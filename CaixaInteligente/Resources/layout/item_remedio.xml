<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <TextView
        android:id="@+id/text_view_nome"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Nome do Remédio"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_view_horario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_nome"
        android:text="horário início"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/text_frequencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_horario"
        android:text="Frequencia"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/text_recipiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_frequencia"
        android:text="Recipiente"
        android:textSize="16sp" />
    <Button
        android:id="@+id/button_apagar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Apagar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@color/colorPrimary"
        android:textSize="14sp" />
     <Button
        android:id="@+id/button_editar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="Editar"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_below="@id/button_apagar"
        android:background="@color/colorPrimary"
        android:textSize="14sp" 
        android:layout_marginTop="5dp"/>

</RelativeLayout>